<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">


    <SurfaceView
            android:id="@+id/main_surfaceview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent=".7"/>

    <fragment
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/controller_fragment"
            app:layout_constraintTop_toTopOf="@id/main_surfaceview"
            app:layout_constraintBottom_toBottomOf="@id/main_surfaceview"
            app:layout_constraintLeft_toRightOf="@id/main_surfaceview"
            app:layout_constraintWidth_percent=".3"
            android:name="com.nnl.russiablock.ui.ControllerFragment"/>
</android.support.constraint.ConstraintLayout>